type: entity_types

#All hostile and passive mobs taller than 1 block
+ all(namespace==minecraft) #partial line comment
- all(height <= 1)
#Exclude mobs that are not either hostile or passive
- all(category==neutral)
- all(category==utility)

+ potion
+ minecraft:arrow
+ endermite
+ silverfish

#remove all small
- all(#size/small)

#Add all that contain the word "ball"
+ all(ball)

#Add all arrows according to Minecraft
+ all(#minecraft:arrows)

#Add all entries of a tag that is defined in another pack
+ all(#hp:no_hp)